# Environment
NODE_ENV=development
PORT=3001

# MongoDB Atlas - REPLACE WITH YOUR CONNECTION STRING
# Get your connection string from: https://cloud.mongodb.com
# Example: mongodb+srv://username:password@cluster.mongodb.net/hotel-booking
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/hotel-booking?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Redis (Optional - only if you have Redis installed locally)
# If Redis is not available, the app will still work but without caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:3000
